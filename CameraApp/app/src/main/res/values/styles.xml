<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Preference.Switch">
        <item name="android:colorControlActivated">@color/orange</item>
    </style>

    <style name="Preference.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/orange</item>
        <item name="android:colorControlActivated">@color/orange</item>
    </style>

</resources>
